<local:BaseView x:Class="XPlatformMenus.WPF.Views.InfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XPlatformMenus.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">Info View</TextBlock>
            <Button HorizontalAlignment="Center" Command="{Binding ShowThirdViewModelCommand}">Show Third ViewModel</Button>
        </StackPanel>
    </Grid>
</local:BaseView>
