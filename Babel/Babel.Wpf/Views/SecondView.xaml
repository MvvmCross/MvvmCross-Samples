<views:MvxWpfView x:Class="Babel.Wpf.Views.SecondView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="25">
        <StackPanel>
            <Button Command="{Binding GoBackCommand}"
                    Content="Go back" />
            
            <TextBlock Text="{Binding TextSource, Converter={StaticResource Language}, ConverterParameter=PageTitle, FallbackValue=PageTitle}" />

            <TextBlock Text="{Binding TextSource, Converter={StaticResource Language}, ConverterParameter=Body1, FallbackValue=Body1}"
                       TextWrapping="Wrap" />

            <TextBlock Text="{Binding TextSource, Converter={StaticResource Language}, ConverterParameter=Body2, FallbackValue=Body2}"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</views:MvxWpfView>
